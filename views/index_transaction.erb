<h1>Transaction Index</h1>


<h2>Total spending: £<%= @transactions.sum(&:amount)   %></h2>
<hr>

<% @transactions.each do |transaction| %>
<p> Date: <%= transaction.time_stamp()[0..9] %> </p>
<p>Amount: £<%= transaction.amount  %></p>
<p>Merchant: <%= transaction.merchant.name %> </p>
<p>Category: <%= transaction.category.name %></p>
<p> <a href="/tracker/edit/transaction/<%= transaction.id %>">Edit transaction</a> </p>
<p> <a href="/tracker/delete/transaction/<%= transaction.id %>">Delete transaction</a> </p>
<hr>
<% end %>
