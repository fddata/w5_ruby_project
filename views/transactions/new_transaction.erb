<h1>Create Transaction</h1>

<h2>New details:</h2>

<form  action="/tracker/view/transaction" method="post">


    <label for="merchant-select">Select Merchant:</label>
    <select id="merchant-select" name="merchant_id">
      <% @merchants.each do |merchant| %>
      <option value= <%="#{merchant.id}"%>> <%= merchant.name %> </option>
      <% end %>
    </select>
  <br>

    <label for="category-select">Select Category:</label>
    <select id="category-select" name="category_id">
      <% @categories.each do |category| %>
      <option value= <%="#{category.id}"%>> <%= category.name %> </option>
      <% end %>
    </select>
  <br>


  <label for="amount">Amount: (Â£)</label>
  <input id = "amount" type="number" name="amount" min="0.01" step=".01" required>
  <br>

  <label for="time-stamp">Date:</label>
  <input id = "time-stamp" type="date" name="time_stamp"  required>
  <br>


  <label hidden for="user-id">User:</label>
  <input hidden id = "user-id" type="text" name="user_id"  value=<%= @user.id %> required>
  <br>

  <input type="submit" value="Create Transaction">


  </form>
